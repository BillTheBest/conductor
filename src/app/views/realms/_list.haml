.content
  - content_for :form_header do
    %li= restful_submit_tag "Delete Selected", "destroy", multi_destroy_realms_path, 'DELETE', :id => 'delete_button', :class => 'button pill danger'
    %li= link_to "New Realm", new_provider_realm_path(@provider), :id => 'new_realm', :class => 'button pill'

  = filter_table(realms_header, @realms) do |realm|
    %tr{:class => cycle('nostripe','stripe')}
      %td
        - selected = params[:select] == 'all'
        = check_box_tag "realm_selected[]", realm.id, selected, :id => "realm_checkbox_#{realm.id}"
      %td= link_to realm.name, realm_path(realm)
