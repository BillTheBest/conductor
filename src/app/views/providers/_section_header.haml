%header.admin-page-header
  %h1= @provider ? @provider.name : Provider.first.name
  #obj_actions
    %span.label.light Choose a provider:
    %ul#provider_select
      %li
        = link_to @provider ? @provider.name : Provider.first.name, {}, :class => 'roundbutton'
        %ul
          %li= link_to "+ Create New Provider", new_provider_path
          - Provider.all.each do |provider|
            %li= link_to provider.name, edit_provider_path(provider)

    = link_to "on/off", {}, :class => "roundbutton"
